<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jimzhang.mapper.StudentMapper" >
  <resultMap id="BaseResultMap" type="com.jimzhang.entity.StudentEntity" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="serial_id" property="serialId" jdbcType="BIGINT"/>
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="age" property="age" jdbcType="NUMERIC" />
  </resultMap>

  <sql id="Base_Column_List" >
    id, serial_id,name, age
  </sql>

  <insert id="insert" parameterType="com.jimzhang.entity.StudentEntity" >
    INSERT INTO
    student
    (serial_id,name,age)
    VALUES
    (#{serialId},#{name}, #{age})
  </insert>

  <select id="findBySerialId" parameterType="Long" resultMap="BaseResultMap">
    SELECT
    <include refid="Base_Column_List"/>
    FROM student
    WHERE serial_id = #{serialId}
  </select>

  <update id="update" parameterType="com.jimzhang.entity.StudentEntity">
    UPDATE student
    <set>
      <if test="name != null">
        name = #{name},
      </if>
      <if test="age != null">
        age = #{age}
      </if>
    </set>
    where ID = #{id,jdbcType=NUMERIC}
  </update>
</mapper>
